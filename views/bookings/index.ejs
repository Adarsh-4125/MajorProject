<% layout('layouts/boilerplate') %>
<div class="container">
    <h1 class="text-center mb-4">Your Bookings</h1>
    <div class="row">
        <% bookings.forEach(booking => { %>
            <div class="col-md-4 mb-4">
                <div class="card">
                    <img src="<%= booking.listing.image[0].url %>" class="card-img-top" alt="<%= booking.listing.title %>">
                    <div class="card-body">
                        <h5 class="card-title"><%= booking.listing.title %></h5>
                        <p class="card-text">
                            <div><strong>Check-in:</strong> <%= new Date(booking.checkIn).toLocaleDateString() %></div>
                            <div><strong>Check-out:</strong> <%= new Date(booking.checkOut).toLocaleDateString() %></div>
                            <div><strong>Total Price:</strong> â‚¹<%= booking.totalPrice %></div>
                            <div><strong>Status:</strong> <span class="badge bg-<%= booking.status === 'confirmed' ? 'success' : booking.status === 'cancelled' ? 'danger' : 'warning' %>"><%= booking.status %></span></div>
                        </p>
                        <a href="/bookings/<%= booking._id %>" class="btn btn-primary">View Details</a>
                    </div>
                </div>
            </div>
        <% }); %>
    </div>
</div>